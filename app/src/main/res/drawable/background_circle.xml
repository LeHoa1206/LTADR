<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#D3D3D3"/> <!-- Màu khi nhấn -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Màu mặc định -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Viền đen -->
        </shape>
    </item>
</selector>
