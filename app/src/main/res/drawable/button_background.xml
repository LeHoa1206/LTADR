<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu khi nhấn (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700"/> <!-- Màu vàng khi nhấn -->
            <corners android:radius="8dp"/> <!-- Bo góc -->
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0FFFFFF"/> <!-- Màu trắng trong suốt -->
            <corners android:radius="8dp"/> <!-- Bo góc -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Viền trắng -->
        </shape>
    </item>

</selector>
