<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header với tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Voucher để đổi"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Danh sách các voucher -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Voucher 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher giảm giá 100k - 1000 điểm"
            android:textSize="18sp"
            android:textColor="#444"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_voucher1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi ngay"
            android:backgroundTint="#FF4081"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Voucher 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher giảm giá 200k - 2000 điểm"
            android:textSize="18sp"
            android:textColor="#444"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_voucher2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi ngay"
            android:backgroundTint="#FF4081"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Voucher 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher giảm giá 500k - 5000 điểm"
            android:textSize="18sp"
            android:textColor="#444"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btn_voucher3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi ngay"
            android:backgroundTint="#FF4081"
            android:textColor="#FFF"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
