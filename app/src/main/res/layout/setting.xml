<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Thanh tiêu đề với nút quay lại và chữ "Cài đặt" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/icback"
            android:contentDescription="Quay lại"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:fontFamily="@font/fontxin" /> <!-- Thay thế với tên font của bạn -->
    </LinearLayout>

    <!-- Ngôn ngữ -->
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngôn ngữ"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fontxin" /> <!-- Thay thế với tên font của bạn -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:background="#000000" />

    <!-- Thông báo -->
    <TextView
        android:id="@+id/tv_notifications_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fontxin" /> <!-- Thay thế với tên font của bạn -->

    <Switch
        android:id="@+id/switch_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bật thông báo"
        android:textSize="16sp"
        android:visibility="gone" /> <!-- Initially hidden -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:background="#000000" />

    <!-- Điều khoản sử dụng -->
    <TextView
        android:id="@+id/tv_terms_of_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điều khoản sử dụng"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fontxin" /> <!-- Thay thế với tên font của bạn -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:background="#000000" />

    <!-- Chính sách bảo mật -->
    <TextView
        android:id="@+id/tv_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chính sách bảo mật"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fontxin"/> <!-- Thay thế với tên font của bạn -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:background="#000000" />

    <!-- Chat để hỗ trợ -->
    <TextView
        android:id="@+id/tv_chat_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hỗ trợ khách hàng"
        android:textSize="22sp"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fontxin"/> <!-- Thay thế với tên font của bạn -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:background="#000000" />
</LinearLayout>
