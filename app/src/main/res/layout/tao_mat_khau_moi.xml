<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icback"
            android:contentDescription="Quay lại" />

        <!-- Layout chứa tiêu đề và mô tả -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo mật khẩu mới"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới của bạn phải khác với mật khẩu đã sử dụng trước đó."
                android:textSize="18sp"
                android:layout_marginBottom="80dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Trường nhập mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:padding="18dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@id/eyeIcon"
                    android:drawablePadding="8dp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/eyeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="16dp"
                    android:src="@drawable/eye_close"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Trường nhập xác nhận mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Xác nhận mật khẩu"
                    android:inputType="textPassword"
                    android:padding="18dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@id/eyeIconClose"
                    android:drawablePadding="8dp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/eyeIconClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="16dp"
                    android:src="@drawable/eye_close"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Nút xác nhận -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/buttonCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác Nhận"
                android:textSize="18sp"
                android:paddingHorizontal="40dp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:background="@drawable/button_border_radius" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
