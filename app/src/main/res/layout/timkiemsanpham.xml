<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Hàng trên cùng với nút back và combo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icback"
            android:contentDescription="Back Button"
            android:layout_margin="16dp"
             />

        <TextView
            android:layout_margin="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục sản phẩm"
            android:textSize="25sp"
            android:fontFamily="@font/fontxin"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Hàng chứa kết quả tìm kiếm và lựa chọn loại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <!-- Kết quả tìm kiếm ở đầu trái -->
        <TextView
            android:id="@+id/tvSearchResults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm được 52 kết quả"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/fontxin"
            android:gravity="start"/>

        <!-- Lựa chọn loại ở đầu phải -->
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="end"/>
    </LinearLayout>

