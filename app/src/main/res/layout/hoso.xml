<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Nút Trở về -->
        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/icback"
            android:contentDescription="Trở về" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ Sơ"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->
    </LinearLayout>

    <!-- Ảnh đại diện -->
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/iconaboutuss"
        android:scaleType="centerCrop"
        android:background="@drawable/user"
        android:layout_marginTop="20dp" />

    <!-- Nút cập nhật ảnh đại diện -->
    <Button
        android:id="@+id/btn_update_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập Nhật Ảnh"
        android:backgroundTint="#837E7E"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->

    <!-- Nhập Họ và Tên (Nằm ngang) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Họ"
            android:inputType="textPersonName"
            android:backgroundTint="@android:color/darker_gray"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->

        <EditText
            android:id="@+id/edt_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tên"
            android:inputType="textPersonName"
            android:backgroundTint="@android:color/darker_gray"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->
    </LinearLayout>

    <!-- Nhập Email (Một dòng) -->
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="@android:color/darker_gray"
        android:paddingBottom="10dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->

    <!-- Nhập Giới tính và Số điện thoại (Nằm ngang) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Số Điện Thoại"
            android:inputType="phone"
            android:backgroundTint="@android:color/black"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->
    </LinearLayout>

    <!-- Nút cập nhật thông tin -->
    <Button
        android:id="@+id/btn_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#837E7E"
        android:text="Cập Nhật Thông Tin"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/fontxin" /> <!-- Thêm fontFamily -->
</LinearLayout>
